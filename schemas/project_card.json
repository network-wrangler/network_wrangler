{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Project Card Schema",
  "required": [
      "project",
      "category",
      "facility",
      "properties"
  ],
  "additionalProperties": false,
  "properties": {
    "project": {
      "type": "string",
      "title": "Project Name",
      "examples": [
        "6th St E Road Diet"
      ]
    },
    "category": {
      "type": "string",
      "enum": [
        "Roadway Attribute Change",
        "Transit Service Attribute Change"
      ],
      "title": "Project Category"
    },
    "tags": {
      "type": "array",
      "title": "Project Tags",
      "items": {
        "type": "string",
        "examples": [
          "vision2050"
        ],
        "uniqueItems": true
      }
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": false,
      "title": "Project Dependencies",
      "properties": {
        "prerequisites": {
          "type": "array",
          "title": "Project Prerequisites",
          "examples": [
            "7th St E Road Diet"
          ]
        },
        "corequisites": {
          "type": "array",
          "title": "Project Co-requisites",
          "examples": [
            "7th St E Road Diet"
          ]
        },
        "conflicts": {
          "type": "array",
          "title": "Project Conflicts",
          "examples": [
            "7th St E Road Diet"
          ]
        }
      }
    },
    "facility": {
      "type": "object",
      "additionalProperties": false,
      "title": "Facility Selection",
      "oneOf": [
        {
          "required": [
            "link",
            "A",
            "B"
          ]
        },
        {
          "required": [
            "trip_id"
          ]
        },
        {
          "required": [
            "route_id"
          ]
        },
        {
          "required": [
            "short_name"
          ]
        },
        {
          "required": [
            "long_name"
          ]
        }
      ],
      "properties": {
        "link": {
          "type": "object",
          "additionalProperties": false,
          "title": "Road Name or Link ID",
          "oneOf": [
            {
              "required": ["name"]
            },
            {
              "required": ["osmid"]
            }
          ],
          "properties": {
            "name": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ]
            },
            "osmid": {
              "type": "string"
            }
          }
        },
        "A": {
          "type": "object",
          "additionalProperties": false,
          "title": "Road A Node",
          "properties": {
            "osmNodeId": {
              "type": "string"
            }
          }
        },
        "B": {
          "type": "object",
          "additionalProperties": false,
          "title": "Roadway B Node",
          "properties": {
            "osmNodeId": {
              "type": "string"
            }
          }
        },
        "trip_id": {
          "type": "string"
        },
        "route_id": {
          "type": "string"
        },
        "short_name": {
          "type": "integer"
        },
        "long_name": {
          "type": "string"
        }
      }
    },
    "properties": {
      "type": "array",
      "title": "Properties to be Changed",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "oneOf": [
          {
            "required": ["property", "set"]
          },
          {
            "required": ["property", "change"]
          }
        ],
        "properties": {
          "property": {
            "type": "string",
            "title": "Property Name to Change (Case Sensitive)",
            "examples": [
              "headway_secs", "LANES"
            ]
          },
          "existing": {
            "type": "integer",
            "title": "Existing Property",
            "examples": [
              3
            ]
          },
          "set": {
            "type": "integer",
            "title": "Set Property without Regard to Existing",
            "examples": [
              2
            ]
          },
          "change": {
            "type": "integer",
            "title": "Change Property Relative to Existing",
            "examples": [
              -1
            ]
          },
          "times": {
            "type": "array",
            "title": "List of Start and End Times the Change Applies",
            "items": {
              "type": "object",
              "required": ["start", "end"],
              "properties": {
                "start": {
                  "type": "string"
                },
                "end": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "notes": {
      "type": "string",
      "title": "Project Notes",
      "examples": [
        "Simple project example to do a road diet on 6th St E in front of MetCouncil"
      ]
    }
  }
}
