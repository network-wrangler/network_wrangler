{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"title": "Project Card Schema",
	"definitions": {
		"name": {
			"title": "Name or list of possible names",
			"oneOf": [{
					"type": "string"
				},
				{
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			]
		},
		"road_node": {
			"type": "object",
			"additionalProperties": false,
			"title": "Roadway Node",
			"properties": {
				"osm_node_id": {
					"type": "string"
				}
			}
		},
		"project": {
			"type": "string",
			"title": "Project Name",
			"examples": [
				"6th St E Road Diet"
			]
		},
		"notes": {
			"type": "string",
			"title": "Project Notes",
			"examples": [
				"Simple project example to do a road diet on 6th St E in front of MetCouncil"
			]
		},
		"category": {
			"type": "string",
			"enum": [
				"Roadway Property Change",
				"Transit Service Property Change",
				"Parallel Managed lanes",
				"Add New Roadway"
			],
			"title": "Project Category"
		},
		"dependencies": {
			"type": "object",
			"additionalProperties": false,
			"title": "Project Dependencies",
			"properties": {
				"prerequisites": {
					"type": "array",
					"title": "Project Prerequisites",
					"examples": [
						"7th St E Road Diet"
					]
				},
				"corequisites": {
					"type": "array",
					"title": "Project Co-requisites",
					"examples": [
						"7th St E Road Diet"
					]
				},
				"conflicts": {
					"type": "array",
					"title": "Project Conflicts",
					"examples": [
						"7th St E Road Diet"
					]
				}
			}
		},
		"tags": {
			"type": "array",
			"title": "Project Tags",
			"items": {
				"type": "string",
				"examples": [
					"vision2050"
				],
				"uniqueItems": true
			}
		},
		"facility": {
			"type": "object",
			"title": "Facility Selection",
			"oneOf": [
				{
					"allOf": [
						{"links" : {"$ref": "#/definitions/link"}},
						{"A" : {"$ref": "#/definitions/road_node"}},
						{"B" : {"$ref": "#/definitions/road_node"}}
					]
				},
				{
					"required": [
						"trip_id"
					]
				},
				{
					"required": [
						"route_id"
					]
				},
				{
					"required": [
						"short_name"
					]
				},
				{
					"required": [
						"long_name"
					]
				}
			]
		},
		"links": {
			"type": "array",
			"title": "Road Name or Link ID",
			"oneOf": [{
					"required": ["name"]
				},
				{
					"required": ["osm_link_id"]
				},
				{
					"required": ["linkid"]
				}
			]
		},
"properties": {
			"type": "array",
			"title": "Properties to be Changed",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"oneOf": [{
						"required": ["property", "set"]
					},
					{
						"required": ["property", "change"]
					}
				],
				"properties": {
					"property": {
						"type": "string",
						"title": "Property Name to Change (Case Sensitive)",
						"examples": [
							"headway_secs", "lanes"
						]
					},
					"existing": {
						"type": "integer",
						"title": "Existing Property",
						"examples": [
							3
						]
					},
					"set": {
						"type": "integer",
						"title": "Set Property without Regard to Existing",
						"examples": [
							2
						]
					},
					"change": {
						"type": "integer",
						"title": "Change Property Relative to Existing",
						"examples": [
							-1
						]
					}
				}
			}
		}
	},
	"properties": {
		"project": {
			"$ref": "#/definitions/project"
		},
		"category": {
			"$ref": "#/definitions/category"
		},
		"dependencies": {
			"$ref": "#/definitions/dependencies"
		},
		"tags": {
			"$ref": "#/definitions/tags"
		},
		"notes": {
			"$ref": "#/definitions/notes"
		},
		"facility": {
			"$ref": "#/definitions/facility"
		},
		"properties": {
			"$ref": "#/definitions/properties"
		}
	},
	"required": ["project"]
}
